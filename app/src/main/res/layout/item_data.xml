<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/linearLayout_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_clipdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"
                tools:text="flags"/>

            <TextView
                android:id="@+id/textView_item_datastring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_componentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_requestcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"
                tools:text="flags"/>

            <TextView
                android:id="@+id/textView_item_intentextras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

            <TextView
                android:id="@+id/textView_item_bundle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/item_key_value_container_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/item_value_text_size"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>